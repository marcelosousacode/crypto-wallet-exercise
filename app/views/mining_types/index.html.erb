<html>
  <head>
    <title>Mining Types</title>
        <%= stylesheet_link_tag    params[:controller], media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag params[:controller], 'data-turbolinks-track': 'reload' %>    

  </head>
  <body>
  <p id="notice"><%= notice %></p>
<h1>Mining Types</h1>

<table>
  <thead>
    <tr>
      <th><%= @mining_types.human_attribute_name(:description)%></th>
      <th><%= @mining_types.human_attribute_name(:acronym)%></th>
      <th>Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td class="options-wrapper"><%= link_to t('links.show'), mining_type %></td>
        <td class="options-wrapper"><%= link_to t('links.edit'), edit_mining_type_path(mining_type) %></td>
        <td class="options-wrapper"><%= link_to t('links.delete'), mining_type, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="new-mining">
  <%= link_to 'New Mining Type', new_mining_type_path %>

</div>
  </body>
</html>